<h1>Login</h1>

<div class="login-container">
  <%= form_tag '/login' do %>

    <div class="form-group">
      <%= label_tag :email, 'Email:' %>
      <%= text_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Submit" %>

  <% end %>
</div>
